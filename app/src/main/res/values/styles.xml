<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DangerButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorDangerButton</item>
        <item name="colorControlHighlight">@color/colorDangerButtonHighlight</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimaryButton</item>
        <item name="colorControlHighlight">@color/colorPrimaryButtonHighlight</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
